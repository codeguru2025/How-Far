# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

# Database - Get from Supabase Dashboard > Settings > Database
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# Supabase API - Get from Supabase Dashboard > Settings > API
SUPABASE_URL="https://[PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Use the JWT secret from Supabase Dashboard > Settings > API > JWT Secret
JWT_SECRET="your-supabase-jwt-secret"
JWT_REFRESH_SECRET="your-refresh-secret"
JWT_EXPIRATION="7d"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development
CORS_ORIGINS="*"

# ===========================================
# PAYMENT PROVIDERS (Zimbabwe)
# ===========================================
ECOCASH_API_URL=""
ECOCASH_MERCHANT_CODE=""
ECOCASH_API_KEY=""

INNBUCKS_API_URL=""
INNBUCKS_MERCHANT_ID=""
INNBUCKS_API_KEY=""

# ===========================================
# SMS PROVIDER (for OTP)
# ===========================================
SMS_PROVIDER="africas_talking" # or "twilio"
AFRICAS_TALKING_API_KEY=""
AFRICAS_TALKING_USERNAME=""
AFRICAS_TALKING_SENDER_ID="RidePass"

# ===========================================
# OPTIONAL: REDIS (for caching)
# ===========================================
REDIS_URL="redis://localhost:6379"
